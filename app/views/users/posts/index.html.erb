<%= render 'layouts/users_header'%>

<div class="container">
        <div class="row">
                <div class="col-sm-6">
                        <h1><%= @user.name %>さんの投稿一覧</h1>
                </div>
                <div class="col-sm-6">
                        <%= link_to '新規追加', new_users_post_path, class:'btn btn-default', style:'margin-top: 23px;' %>
                </div>
        </div>
</div>

<% @posts.each do |post| %>
<div class="container">
        <%= link_to users_post_path(post.id) do %>
                <div class="row" style="height:110px;
                                        width:800px;
                                        margin:20px 0 0 0;
                                        border-left: solid 7px #5d627b;
                                        box-shadow: 2px 2px 4px gray;
                                        background-color: white;">
                        <div class="col-sm-3" style="height:110px;">
                                <%= attachment_image_tag post, :image, style: "width: 100%;height: 100%;", fallback: "no_image.jpg" %>
                        </div>
                        <div class="col-sm-7">
                                <p style="font-size: 20px;margin-top: 10px;">
                                        タイトル：<strong><%= post.title.truncate(18) %></strong>
                                </p>
                                作成日時：<%= post.created_at.strftime("%Y-%m-%d %H:%M") %>
                                <br>
                                更新日時：<%= post.updated_at.strftime("%Y-%m-%d %H:%M") %>
                        </div>
                        <div class="col-sm-2" style="text-align: right;">
                                <div style="margin-top:10px;">
                                        <%= link_to '編集', edit_users_post_path(post), class:'btn btn-default' %>
                                </div>
                                <br>
                                <div style="">
                                        <%= link_to '削除', users_post_path(post), class:'btn btn-default', method: :delete, data: { confirm: '削除しますか？' } %>
                                </div>
                        </div>
                </div>
        <% end %>
</div>
<% end %>