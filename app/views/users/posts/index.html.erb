<% provide(:title, "投稿一覧") %>
<%= render 'layouts/users_header'%>

<div style="text-align: center;margin-bottom:20px;">
        <h1 class="midashi"><%= @user.name %>さんの投稿一覧</h1>
</div>


<% @posts.each do |post| %>
<div class="container" style="margin-bottom:20px;">
        <%= link_to users_post_path(post.id) do %>
                <div class="row" style="height:200px;
                                        border-left: solid 7px #5d627b;
                                        box-shadow: 2px 2px 4px gray;
                                        background-color: white;">
                        <div class="col-md-4 col-sm-3 col-xs-6" style="margin-top:12px;">
                                <%= attachment_image_tag post, :image, :fill, 260, 175, fallback: "/images/no_image.png", class:"img-responsive" %>
                        </div>
                        <div class="col-xs-6">
                                <p style="font-size: 20px;margin-top: 10px;word-wrap: break-word;">
                                        タイトル：<strong><%= post.title.truncate(100) %></strong>
                                </p>
                                作成日時：<%= post.created_at.strftime("%Y-%m-%d %H:%M") %>
                                <br>
                                更新日時：<%= post.updated_at.strftime("%Y-%m-%d %H:%M") %>
                        </div>
                        <div class="col-md-2 col-sm-3 hidden-xs" style="top: 50px; left: 50px;">
                                <div style="margin-top:10px;">
                                        <%= link_to '編集', edit_users_post_path(post), class:'btn btn-default btn-lg' %>
                                </div>
                                <br>
                                <div style="">
                                        <%= link_to '削除', users_post_path(post), class:'btn btn-default btn-lg', method: :delete, data: { confirm: '削除しますか？' } %>
                                </div>
                        </div>
                </div>
        <% end %>
</div>
<% end %>

<div style="margin-left:10px;">
        <%= paginate @posts, class: "paginate" %>
<div>

<div id="page_top"><a href="#"></a></div>