<%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
  <div class="page-header">
    <h1>メッセージ確認</h1>
  </div>
  <table class="table">
    <tr>
      <th>名前</th>
        <td><%= f.hidden_field :name %></td>
        <td><%= @inquiry.name %></td>
    </tr>
    <tr>
      <th>お問い合わせ内容</th>
      <td><%= f.hidden_field :message %></td>
      <td><%= simple_format(@inquiry.message) %></td>
    </tr>
  </table>
      <%= f.submit '戻る', name: 'back', class: 'btn btn-primary btn-lg' %>
      <%= f.submit '送信する', class: 'btn btn-primary btn-lg' %>
<% end %>