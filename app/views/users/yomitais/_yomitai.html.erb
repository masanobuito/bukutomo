<% if user_signed_in? %>
    <% if @post.yomitaid_by?(current_user) %>
    <li>
        <%= link_to users_post_yomitais_path(@post), method: :delete, remote: true do %>
        <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
        <%= @post.yomitais.count %> 読みたい！
        <% end %>
    </li>
    <% else %>
    <li>
        <%= link_to users_post_yomitais_path(@post), method: :post, remote: true do %>
        <i class="fa fa-heart-o" aria-hidden="true"></i>
        <%= @post.yomitais.count %> 読みたい！
        <% end %>
    </li>
    <% end %>
<% end %>
