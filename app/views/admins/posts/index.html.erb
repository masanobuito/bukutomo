<%= render 'layouts/admins_header'%>
<div class="page-header text-center">
        <h2>投稿一覧</h2>
</div>


<% @posts.each do |post| %>
<div class="container" style="margin-bottom:20px;">
        <%= link_to admins_post_path(post.id) do %>
                <div class="row" style="height:200px;
                                        /* width:800px; */
                                        margin:10px 0 0 0;
                                        border-left: solid 7px #5d627b;
                                        box-shadow: 2px 2px 4px gray;
                                        background-color: white;">
                        <div class="col-md-4 col-sm-3 col-xs-6" style="margin-top:12px;">
                                <%= attachment_image_tag post, :image, :fill, 260, 175, fallback: "no_image.jpg", class:"img-responsive" %>
                        </div>
                        <div class="col-xs-6">
                                <p style="font-size: 20px;margin-top: 10px;">
                                        タイトル：<strong><%= post.title.truncate(18) %></strong>
                                </p>
                                作成日時：<%= post.created_at.strftime("%Y-%m-%d %H:%M") %>
                                <br>
                                更新日時：<%= post.updated_at.strftime("%Y-%m-%d %H:%M") %>
                        </div>
                        <div class="col-md-2 col-sm-3 hidden-xs" style="top:110px;left:50px;">
                                <%= link_to '削除', admins_post_path(post), class:'btn btn-default btn-lg', method: :delete, data: { confirm: '削除しますか？' } %>
                        </div>
                </div>
        <% end %>
</div>
<% end %>
<div id="page_top"><a href="#"></a></div>
