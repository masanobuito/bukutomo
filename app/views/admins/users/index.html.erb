<%= render 'layouts/admins_header'%>
<h1>Admins::Users#index</h1>
<p>Find me in app/views/admins/users/index.html.erb</p>

<div class="container">
        <div class="row">
                <div class="col-md">
                        <h1>ユーザー一覧</h1>
                </div>
        </div>
</div>

<% @users.each do |user| %>
<div class="container">
        
                <div class="row" style="height:110px;
                                        width:800px;
                                        margin:20px 0 0 0;
                                        border-left: solid 7px #5d627b;
                                        box-shadow: 2px 2px 4px gray;
                                        background-color: white;">

                        <div class="col-md-7">
                                <p style="font-size: 20px;margin-top: 10px;">
                                        ユーザー：<strong><%= user.name %></strong>
                                </p>
                        </div>
                        <div class="col-md-2" style=";">
                                <div style="margin-top: 30px;">
                                        <% if false %>//コメントアウトしてます//<%= link_to '削除', user_registration_path(user), class:'btn btn-default btn-lg', method: :delete, data: { confirm: '削除しますか？' } %><% end %>
                                        <%= link_to "このユーザを削除", admins_user_path(user), class:"alert-link btn btn-danger", method: :delete, "data-confirm" => "本当に退会させますか？" %>
                                </div>
                        </div>
                </div>
</div>
<% end %>