
<div class="container">
        <div class="row">
                <div class="col-sm-12">
                        <h1>ユーザー投稿詳細ページ</h1>
                </div>
        </div>
</div>

<div style="margin:50px 0 0 0;">
        <div class="container">
                <div class="row" style="width:800px;margin:20px 0 0 0;margin: 0 auto;">
                        <div class="col-sm-3" style="height:100px;border: 1px solid #ccc;">
                                画像
                        </div>
                        <div class="col-sm-9" style="border: 1px solid #ccc;word-wrap: break-word;">
                                <p style="font-size: 25px;">
                                タイトル：<strong><%= @post.title %></strong>
                                </p>
                                
                                作成日時：<%= @post.created_at.strftime("%Y-%m-%d %H:%M") %>
                                <br>
                                更新日時：<%= @post.updated_at.strftime("%Y-%m-%d %H:%M") %>
                        </div>
                </div>
                <div class="row" style="width:800px;border: 1px solid #ccc;margin: 0 auto;margin-top: 50px;">
                        <p class="col-sm-12">
                        <%= @post.body %>
                        </p>
                </div>
        </div>
</div>
